{
  "name": "c4ignite-dev",
  "dockerComposeFile": ["../docker/dev/docker-compose.yml"],
  "service": "php",
  "workspaceFolder": "/var/www/html",
  "shutdownAction": "none",
  "postCreateCommand": "composer install",
  "remoteUser": "${containerUser}",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "xdebug.php-debug",
        "bmewburn.vscode-intelephense-client"
      ]
    }
  }
}
